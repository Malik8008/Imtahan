@using Imtahan.Models

@model List<Client>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-5">
        <a asp-controller="client" asp-action="create"><button>Create Client</button></a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Detail</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Client item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    <img src="~/assets/IMG/client-image/@item.Image" />
                </td>
                <td>@item.Name</td>
                <td>@item.Position</td>
                <td>
                    <a asp-controller="client" asp-action="detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                </td>
                <td>
                    <a asp-controller="client" asp-action="edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td>
                    <a asp-controller="client" asp-action="delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td>

            </tr>
            }
        </tbody>
    </table>


</div>

